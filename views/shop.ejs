<%- include('./partials/header') %>

<% if(success.length>0){ %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-green-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= success %>
        </span>
    </div>
<% } %>

<div class="w-full min-h-screen flex flex-col md:flex-row px-4 md:px-20 py-10">
    <!-- Sidebar -->
    <div class="w-full md:w-1/4 flex flex-col items-start">
        <!-- Sort By -->
        <div class="flex items-center gap-2 mb-8">
            <h3>Sort By</h3>
            <form action="/shop">
                <select class="border-[1px] px-2 py-1" name="sortby" id="">
                    <option value="popular">Popular</option>
                    <option value="newest">Newest</option>
                </select>
            </form>
        </div>

        <!-- Product Categories -->
        <div class="flex flex-col mb-8">
            <a class="block w-fit mb-2" href="">New Collection</a>
            <a class="block w-fit mb-2" href="">All Products</a>
            <a class="block w-fit mb-2" href="">Discounted Products</a>
        </div>

        <!-- Filter Section -->
        <div class="mt-8">
            <a class="block w-fit mb-2" href="">Filter by :</a>
            <a class="block w-fit mb-2" href="">Availability</a>
            <a class="block w-fit mb-2" href="">Discount</a>
        </div>
    </div>

    <!-- Product Grid -->
    <div class="w-full md:w-3/4 flex flex-col gap-5">
        <div class="flex flex-wrap gap-5 justify-start">
            <% products.forEach(function(product){ %>
                <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4">
                    <div class="w-full bg-white shadow-md rounded-md">
                        <div class="w-full h-52 flex items-center justify-center bg-[<%= product.bgcolor %>]">
                            <% if (product.image) { %>
                                <img class="h-[12rem]" src="data:images/6bag.png;base64,<%= product.image.toString('base64') %>" alt="Product Image">
                            <% } else { %>
                                <img class="h-[12rem]" src="/images/placeholder.png" alt="No image available">
                            <% } %>
                        </div>
                        <div class="flex justify-between bg-[<%= product.panelcolor %>] items-center px-4 py-4 text-[<%= product.textcolor %>]">
                            <div>
                                <h3><%= product.name %></h3>
                                <h4>â‚¹ <%= product.price %></h4>
                            </div>
                            <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white" href="/addtocart/<%= product._id %>">
                                <i class="ri-add-line"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
