<%- include('./partials/header') %>

<div class="w-full min-h-screen flex px-4 md:px-10 lg:px-20 py-10">
    <div class="w-full lg:w-1/2 flex items-center justify-center">
        <div class="w-full max-w-md px-6 md:px-32">
            <h4 class="text-2xl capitalize mb-5">Admin Access</h4>
            <form action="/create" method="post">
                <input
                    class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="email" placeholder="Email" name="email">
                <input
                    class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="password" placeholder="Password" name="password">
                <input class="px-5 rounded-full py-3 mt-2 bg-blue-500 text-white w-full" type="submit" value="Login">
            </form>
        </div>
    </div>
</div>

