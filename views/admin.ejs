<%- include('./partials/header') %>

<div class="w-full min-h-screen flex flex-col md:flex-row px-5 md:px-20 py-10 md:py-20 gap-6">
  
  <!-- Sidebar -->
  <div class="w-full md:w-[25%] flex flex-col">
    <div class="flex flex-col gap-2">
      <a class="block w-fit" href="">All Products</a>
      <a class="block w-fit" href="">Create new product</a>
    </div>
  </div>

  <!-- Main Content -->
  <div class="w-full md:w-[75%] flex flex-col gap-5">
    
    <!-- Delete All Button -->
    <a class="text-red-500" href="">Delete all</a>

    <!-- Product Grid Row 1 -->
    <div class="flex flex-wrap gap-5">
